<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="StepView">
        <attr name="step_view_reachedDrawable" format="reference" />
        <attr name="step_view_unreachedDrawable" format="reference" />
        <attr name="step_view_currentDrawable" format="reference" />
        <attr name="step_view_drawable" format="reference" />
        <attr name="step_view_drawableMargin" format="dimension" />
        <attr name="step_view_reachedLineColor" format="color" />
        <attr name="step_view_unreachedLineColor" format="color" />
        <attr name="step_view_lineColor" format="color" />
        <attr name="step_view_lineWidth" format="dimension" />
        <attr name="step_view_reachedTextColor" format="color" />
        <attr name="step_view_unreachedTextColor" format="color" />
        <attr name="step_view_currentTextColor" format="color" />
        <attr name="step_view_textColor" format="color" />
        <attr name="step_view_textSize" format="dimension" />
        <attr name="step_view_verticalSpace" format="dimension" />
        <attr name="step_view_textPostion" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="step_view_unreachedDrawableSize" format="dimension"/>
        <attr name="step_view_reachedDrawableSize" format="dimension"/>
        <attr name="step_view_currentDrawableSize" format="dimension"/>
        <attr name="step_view_lineType" format="enum">
            <enum name="solid" value="0" />
            <enum name="dotted" value="1" />
        </attr>
    </declare-styleable>

    <attr name="StepViewStyle" format="reference" />
</resources>
